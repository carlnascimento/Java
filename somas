package sistemas;

import java.util.Scanner;

public class somas {

	public static void main(String[ ]args) {

		Scanner variavel = new Scanner(System.in);
		
		double soma, num1, num2, num3, num4, num5, num6;
		
		System.out.printf("Informe o primeiro número, pressione enter em seguida \n");
		
		num1= variavel.nextDouble();
		
		System.out.printf("Informe o segundo número, pressione enter em seguida \n");
		
		num2=variavel.nextDouble();
		
		System.out.printf("Informe o terceiro número, pressione enter em seguida \n");
		
		num3= variavel.nextDouble();
		
		System.out.printf("Informe o quatro número, pressione enter em seguida \n");
		num4= variavel.nextDouble();
		
		System.out.printf("Informe o quinto número, pressione enter em seguida \n");
		num5= variavel.nextDouble();
		
		System.out.printf("Informe o sexto número, pressione enter em seguida \n");
		num6= variavel.nextDouble();
		
		soma=(num1+num2+num3+num4+num5+num6);
		
		System.out.printf("A soma dos valores é de %.2f",soma);
		System.out.printf(" \n");
		System.out.printf(">>>FIM DA ROTINA<<<");
		
		
		
		
	}
	
}
